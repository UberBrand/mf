<script>    
  window.onload = function(){     
    var eventError = document.getElementsByClassName("errorMessage errMsg");
    if (eventError) {
      for (var i = 0; i < eventError.length; i++) {
        var evtError = eventError[i];
        var evtChildrens = evtError.children;
        for (var j = 0; j < evtChildrens.length; j++) {
          var evtChild = evtChildrens[j];
          console.log('ErrorLog:' + evtChild.outerHTML);
          if(evtChild.outerHTML == '<ul><li><a href="#Chargent" class="errMsg">Could not run Chargent Apex method AuthorizeOpportunity_Click(OpportunityId</a></li></ul>' || 
            evtChild.outerHTML == '<ul><li><a href="#Chargent" class="errMsg">Could not run Chargent Apex method ChargeOpportunity_Click(OpportunityId</a></li></ul>'){
            evtChild.outerHTML = "<span class='notbold'>There appears to be a problem with the payment. Please check that you have entered the correct credit card numbers and try again. If this problem occurs again then please contact Foundations on (02) 8345 9137, or email mirig@montefiorehome.com.au. Thank You.</span>";
          }
        }
      }
    }
      
  }
    
</script>

